@model SoruBankasi.Models.Kullanici
@{
    ViewBag.Page = "Kullanıcılar";
    ViewBag.Title = "Kullanıcı Yönetimi";
    ViewBag.Description = "Kullanıcı ekleme ekranı";
}

<h2>Yeni Ders Tanımlama</h2>

<div class="row">
    <div class="col-md-6">
        <div class="btn-group">
            <button class="btn sbold green" onclick="location.href='@Url.RouteUrl("Users")'">
                Kullanıcı Listesi
                <i class="fa fa-chevron-left"></i>
            </button>
        </div>
    </div>
</div>
<br />
@Html.Raw(@ViewBag.Message)

<div class="portlet-body form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Mail Adresi</label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-envelope"></i>
                </span>
                @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", @placeholder = "Mail Adresi" })
            </div>
            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Kullanıcı Adı</label>
            @Html.TextBoxFor(model => model.KullaniciAdi, new { @class = "form-control spinner", @placeholder = "Kullanıcı Adı" })
            @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Şifre</label>
            @Html.PasswordFor(model => model.Sifre, new { @class = "form-control spinner", @placeholder = "Şifre" })
            @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Adı</label>
            @Html.TextBoxFor(model => model.Adi, new { @class = "form-control spinner", @placeholder = "Adınız" })
            @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Soyadı</label>
            @Html.TextBoxFor(model => model.Soyadi, new { @class = "form-control spinner", @placeholder = "Soyadınız" })
            @Html.ValidationMessageFor(model => model.Soyadi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Yönetici Mi?</label>
            <div class="mt-checkbox-inline">
                <label class="mt-checkbox">
                    @Html.CheckBoxFor(model => model.YoneticiMi) Yönetici
                    <span></span>
                </label>
            </div>
        </div>
        <div class="margin-top-10">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </div>
    }
</div>
