@model IEnumerable<SoruBankasi.Models.ViewModel.SinavHazirlamaViewModel>
@{
    ViewBag.Page = "Sınav";
    ViewBag.Title = "Sınav Yönetimi";
    ViewBag.Description = "Sınav Hazırlama ekranı";
}

@using (Html.BeginForm())
{
    <div class="portlet-body form">
        <div class="form-horizontal">

            <div class="form-group">
                <label class="col-md-2 control-label">Ders Seçin</label>
                <div class="col-md-10">
                    <select id="Ders" name="Ders" class="form-control">
                        @foreach (var item in ViewBag.Lessons)
                        {
                            <option value="@item.ID">@item.DersAdi</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Dönem Seçin</label>
                <div class="col-md-10">
                    <select id="Donem" name="Donem" class="form-control">
                        <option selected="selected" value="0">Dönem Seçin</option>
                        <option value="1">Vize</option>
                        <option value="2">Final</option>
                        <option value="3">Bütünleme</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Soru Adetleri</label>
                <div class="col-md-10">
                    <span class="help-inline"> Klasik Soru Sayısı </span>
                    <div class="input-inline input-medium">
                        <div class="input-group col-md-3">
                            <input type="text" name="KlasikSoruAdet" class="form-control col-md-2 mask_number">
                        </div>
                    </div>

                    <span class="help-inline"> Boşluk Doldurma Soru Sayısı </span>
                    <div class="input-inline input-medium">
                        <div class="input-group col-md-3">
                            <input type="text" name="BoslukSoruAdet" class="form-control col-md-2 mask_number">
                        </div>
                    </div>

                    <span class="help-inline"> Test Soru Sayısı </span>
                    <div class="input-inline input-medium">
                        <div class="input-group col-md-3 ">
                            <input type="text" name="TestSoruAdet" class="form-control mask_number">
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Soru Puanları</label>
                <div class="col-md-10">
                    <span class="help-inline"> Klasik Soru Puanı </span>
                    <div class="input-inline input-medium">
                        <div class="input-group col-md-3">
                            <input type="text" name="KlasikSoruPuan" class="form-control col-md-2 mask_number">
                        </div>
                    </div>

                    <span class="help-inline"> Boşluk Doldurma Soru Puanı </span>
                    <div class="input-inline input-medium">
                        <div class="input-group col-md-3">
                            <input type="text" name="BoslukSoruPuan" class="form-control col-md-2 mask_number">
                        </div>
                    </div>

                    <span class="help-inline"> Test Soru Puanı </span>
                    <div class="input-inline input-medium">
                        <div class="input-group col-md-3 ">
                            <input type="text" name="TestSoruPuan" class="form-control mask_number">
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-default gonder" />
                </div>
            </div>

        </div>
    </div>
}

@section styles{
    <link href="/Content/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />
}

@section scripts {
    <script src="/Content/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="/Content/assets/pages/scripts/components-select2.min.js" type="text/javascript"></script>
    <script src="/Content/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js" type="text/javascript"></script>
    <script src="/Content/assets/pages/scripts/form-input-mask.js" type="text/javascript"></script>
}

